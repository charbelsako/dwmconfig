#! /bin/bash
lirarate="$HOME/.local/share/lirarate"
getlirarate() { curl -sf "https://lbprate.com/" > "$lirarate" || exit 1; }
buy=0
showrate() { 
	buy=$(cat $lirarate | grep "1 USD" | sed 's/\([^0-9]\)//g' | sed -e 's/^\(.\{1\}\)//g' | head -n 1)

	printf "%s" "$buy"; 
}

case $BUTTON in
	#1) notify-send "what" ;;
	2) notify-send "ğŸ’²Updating..." && getlirarate && showrate && notify-send "ğŸ’²Updated Rate" ;;
	3) notify-send "Lira Exchange Rate: ğŸ’²" ;;
esac

showrate 

